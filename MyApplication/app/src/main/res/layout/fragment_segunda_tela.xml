<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.myapplication.SegundaTelaFrag">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lesson"
            android:id="@+id/textViewLesson"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Palavra"
            android:id="@+id/textView4"
            android:layout_below="@+id/textViewLesson"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="abcdefg"
            android:id="@+id/textViewPalavra"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="resposta"
            android:id="@+id/textViewResposta"
            android:layout_below="@+id/textViewPalavra"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Certo"
            android:id="@+id/textViewCertoErrado"
            android:background="@android:color/holo_red_dark"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="30dp"
            android:layout_below="@+id/textViewResposta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonEnviar"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:clickable="false"
            android:enabled="true"
            android:text="Enviar" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Pular"
            android:id="@+id/buttonPular"
            android:layout_below="@+id/editText"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/buttonResposta"
            android:layout_toEndOf="@+id/buttonResposta" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Exibir Resposta"
            android:id="@+id/buttonResposta"
            android:layout_alignBottom="@+id/buttonPular"
            android:layout_toRightOf="@+id/buttonEnviar"
            android:layout_toEndOf="@+id/buttonEnviar"
            android:enabled="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="OUVIR"
            android:id="@+id/buttonOuvir"
            android:layout_below="@+id/buttonEnviar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp"
            android:layout_alignParentEnd="false" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="PROXIMO"
            android:id="@+id/buttonProximo"
            android:layout_alignBottom="@+id/buttonOuvir"
            android:layout_alignRight="@+id/editText"
            android:layout_alignEnd="@+id/editText" />


    </RelativeLayout>
</FrameLayout>
